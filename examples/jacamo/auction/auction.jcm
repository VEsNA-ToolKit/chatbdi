mas auction {

    agent bob : auction_capabilities.asl {
        goals: do_auction("a1","flight_ticket(paris,athens,date(15,12,2015))")
               do_auction("a2","flight_ticket(athens,paris,date(18,12,2015))")
    }


    agent alice   : auction_capabilities.asl
    agent maria   : auction_capabilities.asl
    agent francois: auction_capabilities.asl
    agent giacomo : auction_capabilities.asl
    agent user : user.asl {
        nl2log_prompt : "../../../interpreter/src/agt/chatbdi/modelfiles/nl2logPrompt.txt"
        log2nl_prompt : "../../../interpreter/src/agt/chatbdi/modelfiles/log2nlPrompt.txt"
        nl2log_model : "../../../interpreter/src/agt/chatbdi/modelfiles/nl2log.txt"
        log2nl_model : "../../../interpreter/src/agt/chatbdi/modelfiles/log2nl.txt"
        class_model : "../../../interpreter/src/agt/chatbdi/modelfiles/classifier.txt"
        gen_model : "qwen2.5-coder"
        emb_model : "all-minilm"
        ag-arch : chatbdi.Interpreter
    }

    organisation aorg : auction-os.xml {
        group agrp : auctionGroup {
            players: bob      auctioneer
                     alice    participant
                     maria    participant
                     francois participant
                     giacomo  participant

            //debug: inspector_gui(on)
        }
    }
}
